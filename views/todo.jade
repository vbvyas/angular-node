link(rel='stylesheet', href='/angular/css/todo.css')
h2 TODO
div(ng-controller='TodoCtrl')
  span {{remaining()}} of {{todos.length}} remaining
  |  [ 
  a(href='', ng-click='archive()') archive
  |  ] 
  ul.unstyled
    li(ng-repeat='todo in todos')
      input(type='checkbox', ng-model='todo.done')
      span(class='done-{{todo.done}}') {{todo.text}}

  form(ng-submit='addTodo()')
    div.input-append
      input(type='text', ng-model='todoText', size='30', placeholder='add new todo her')
      input.btn.btn-primary(type='submit', value='add')

hr

script(src='/angular/js/todo.js', type='text/javascript')
